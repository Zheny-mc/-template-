	 <!--  ********************** info *********************************** -->
	<bean id="circleMotionAndIncreaseInRadius" 
		class="springhw.complex.CircleMotionAndIncreaseInRadius" /> 
	
	<bean id="info1" class="springhw.Model.InfoComplexMoving" >
		<property name="info" value="Circle Motion And Increase In Radius"/>
		<property name="complexMoving" ref="circleMotionAndIncreaseInRadius"/>
		<property name="isMake" value="false"/> 
	</bean>
	
	<bean id="clockWiseMovement" 
		class="springhw.complex.ClockWiseMovement" /> 
	
	<bean id="info2" class="springhw.Model.InfoComplexMoving">
		<property name="info" value="Clock Wise Movement"/>
		<property name="complexMoving" ref="clockWiseMovement"/>
		<property name="isMake" value="false"/> 
	</bean>
	
	<bean id="upMoreRadiusDownLessRadius" 
		class="springhw.complex.UpMoreRadiusDownLessRadius" /> 	
	
	<bean id="info3" class="springhw.Model.InfoComplexMoving">
		<property name="info" value="Up - MoreRadius, Down - LessRadius"/>
		<property name="complexMoving" ref="upMoreRadiusDownLessRadius"/>
		<property name="isMake" value="false"/> 
	</bean>
	<!-- *************************************************************** -->
	

</beans>

